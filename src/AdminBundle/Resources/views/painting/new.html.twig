{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <h3>Painting creation</h3>

    {{ form_start(form) }}
        {{ form_row(form.title)}}
        <button class="btn" type="button" data-toggle="collapse" data-target="#titleEn" aria-expanded="false" aria-controls="collapseExample">Anglais</button>
        <div class="collapse" id="titleEn">{{ form_row(form.titleEn)}}</div>
        {{ form_row(form.thumbnail)}}
        {{ form_row(form.image)}}
        {{ form_row(form.createdAt)}}
        <input class='btn btn-success' type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('painting_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
